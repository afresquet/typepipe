	"bugs": {
		"url": "https://github.com/afresquet/typepipe/issues"
	},
	"homepage": "https://github.com/afresquet/typepipe#readme",
	"devDependencies": {
		"@types/jest": "^27.5.1",
		"husky": "^8.0.0",
		"jest": "^28.1.0",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"ts-jest": "^28.0.2",
		"typescript": "^4.6.4"
	}
